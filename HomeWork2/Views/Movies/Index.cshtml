@model IEnumerable<HomeWork2.Models.Movie>

<h2>Top 10 Movies</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Poster</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td><img src="@movie.PosterUrl" alt="@movie.Title" style="width:100px;height:auto;" /></td>
                <td>@movie.Description</td>
            </tr>
        }
    </tbody>
</table>
