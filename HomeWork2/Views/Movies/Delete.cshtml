@model HomeWork2.Models.Movie

@{
	ViewData["Title"] = "Delete";
	ViewData["PageTitle"] = "REMOVE: " + @Model.Title + "?";
	ViewData["ShowAddButton"] = false;
	ViewData["ShowBackButton"] = true;
}

<section class="box">
	<div class="delete-box">
		<h1 class="delete-title">@Model.Title</h1>
		<div class="delete-rating">Rating: @Model.Rating</div>
		<div class="delete-genre">Genre: @Model.Genre</div>
		<img class="delete-posterUrl" src="@Model.PosterUrl" alt="Movie Poster">
		<div class="delete-year">Year: @Model.Year</div>
		<div class="delete-director">Director: @Model.Director</div>
		<div></div>
	</div>
	<div class="delete-form-box">
		<p class="notification">Are you shure you want to delete this movie?!</p>
		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<div class="button-container">
				<button type="submit">Delete</button>
				<button asp-action="Index">Cancel</button>
			</div>
		</form>
	</div>
</section>